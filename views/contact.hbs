<h2>Contact me</h2>
<form action="/contact/send-message" method="POST" >
  {{#if isSent}}
    <div class="isSent">Your massege has been sent! File "{{fileValue}}" has been saved.</div>
  {{/if}}
  {{#if isError}}
    <div class="isError">You can't leave fields empty!</div>
  {{/if}}
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project File: <input type="file" name="fileName" accept=".png, .jpg, .jpeg, .gif">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>  
  <button type="submit">Send message</button>
</form>
